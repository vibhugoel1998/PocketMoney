<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
    <LinearLayout android:layout_height="match_parent"
        android:background="#fff"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:onClick="doFinishAuto6"
                android:src="@drawable/back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Upload Documents"
                android:fontFamily="casual"
                android:textColor="#fff"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:layout_height="wrap_content">
             <ImageView
                 android:layout_width="40dp"
                 android:src="@drawable/report"
                 android:layout_marginTop="5dp"
                 android:layout_gravity="center"
                 android:layout_marginBottom="5dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:layout_height="40dp" />
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:fontFamily="casual"
                android:text="Upload your documents"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#f6f5fa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/doc1"
                    android:onClick="SelectAndUpload1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/plus"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Bank Statement"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:onClick="SelectAndUpload2"
                android:id="@+id/doc2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/plus"
                android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="PAN Card"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/doc3"
                android:onClick="SelectAndUpload3"
                android:layout_marginRight="5dp"
                android:src="@drawable/plus"
                android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Aadhar Card"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/doc4"
                android:onClick="SelectAndUpload4"
                android:layout_marginRight="5dp"
                android:src="@drawable/plus"
                android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Address Proof"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/doc5"
                android:onClick="SelectAndUpload5"
                android:layout_marginRight="5dp"
                android:src="@drawable/plus"
                android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Highest Qualification Certificate"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/doc6"
                android:onClick="SelectAndUpload6"
                android:layout_marginRight="5dp"
                android:src="@drawable/plus"
                android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Company ID Card"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="casual"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/pdfpass"
            android:hint="PDF or Image password any?"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:id="@+id/pdfbank"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Name of the bank where you get your salary"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="Submit"
            android:layout_marginBottom="20dp"
            android:onClick="SubmitDocument"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>