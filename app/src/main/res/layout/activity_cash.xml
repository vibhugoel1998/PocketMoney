<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="20dp"
        android:onClick="doFinish1"
        android:src="@drawable/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_height="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/homeElement"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#ffca18"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/rupee"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Cash"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Get up to Rs.2 lakhs today"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Fill some basic details, Upload some documents, Get your loan amount approved, and transfer money into your bank account today!"
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Repay your loan or before your due date through app, and borrow again."
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Get future loan within 2 minutes 24*7"
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:id="@+id/homeElement1"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#ffca18"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/replay"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Repay"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Repay/Pre-pay anytime at no extra cost"
                        android:textStyle="bold"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="We auto deduct your dues on your due date from your bank account."
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="But, you can always repay your dues anytime, on or before the due date, with absolutely"
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Repay through this app using your UPI, net banking or debit card details."
                        android:fontFamily="casual"
                        android:textSize="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:id="@+id/applyButton"
                android:onClick="ApplyForLoan"
                android:paddingBottom="5dp"
                android:text="Apply for loan"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>