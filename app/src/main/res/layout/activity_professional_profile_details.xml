<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/side_nav_bar"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/proffprof"
        app:cardCornerRadius="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:background="#e0eee0"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Professional Profile!!"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="2/4"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/CompanyName"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:hint="Company Name"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/Designation"
                        android:hint="Designation"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/OfficeArea"
                        android:layout_marginRight="5dp"
                        android:hint="Office Area"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/OfficeCity"
                        android:layout_marginRight="5dp"
                        android:hint="Office City"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/OfficePincode"
                        android:hint="Office Pincode"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/TotalExperience"
                        android:inputType="number"
                        android:hint="Total Experience in current company"
                        android:layout_marginRight="5dp"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/MonthlySalary"
                        android:hint="Monthly Salary"
                        android:inputType="number"
                        android:layout_marginRight="5dp"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/PanNumber"
                        android:inputType="number"
                        android:hint="PAN Card Number"
                        android:layout_marginRight="5dp"
                        android:textSize="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Submit"
                    android:textColor="#000"
                    android:onClick="SubmitProfessional"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#e0eee0"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</FrameLayout>