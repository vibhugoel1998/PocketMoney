<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:onClick="doFinish"
            android:src="@drawable/back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Loan Calculator"
            android:fontFamily="casual"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="How much cash do you need?"
        android:fontFamily="casual"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:layout_width="match_parent"
        style="@style/MySeekBar"
        android:thumb="@drawable/customthumb"
        android:max="22000"
        android:id="@+id/cashseekbar"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/cashtext"
        android:textColor="#fff"
        android:text="₹8000"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="₹8000"
            android:textColor="#e0eee0"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="₹30000"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="When can you return?"
        android:fontFamily="casual"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:layout_width="match_parent"
        style="@style/MySeekBar"
        android:thumb="@drawable/custom_date_thumb"
        android:max="23"
        android:id="@+id/dateseekbar"
        android:thumbOffset="15dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/datetext"
        android:textColor="#fff"
        android:text="7 Days"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#e0eee0"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="30"
            android:layout_marginRight="5dp"
            android:textColor="#e0eee0"
            android:textSize="20dp"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/profilepic"
        app:cardCornerRadius="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textSize="25dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:id="@+id/returntext"
                android:fontFamily="casual"
                android:text="₹9780"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="#000"
                android:layout_marginBottom="2dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:id="@+id/duedatetext"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="Processing Fee ₹500"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/interestRate"
        android:text="Interest Amount ₹1180"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="Stamp duty ₹100"
        android:gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>