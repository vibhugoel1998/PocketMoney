<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fraglayout"
    android:background="#fff">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/StatusApproval"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffca18"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:src="@drawable/stopwatch"
                android:layout_marginTop="5dp"
                android:layout_height="70dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="Approval Requested"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="The approval process is on the way."
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="casual"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/homeElement"
        app:cardCornerRadius="7dp"
        android:onClick="Cash"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#e0eee0"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/rupee"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Cash"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Get instant cash transferred to your bank ac"
                    android:textColor="#000"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/homeElement2"
        app:cardCornerRadius="7dp"
        android:onClick="LoanCalc"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#e0eee0"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/budget"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Loan Calculator"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:gravity="bottom|left"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Get to know our rates better"
                    android:textColor="#000"
                    android:fontFamily="casual"
                    android:gravity="center|left"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>